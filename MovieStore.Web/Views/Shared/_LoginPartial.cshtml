@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav navbar-right navbar-dark">
            @if (User.IsInRole("Admin"))
            {
            <li class="nav-item">
                @Html.ActionLink("Admin Page", "Index", "Admin", new { }, new { @class = "nav-link" })
            </li>
            }
            @if (User.IsInRole("Customer"))
            {
        <li class="nav-item">
            @Html.ActionLink("Customer Page", "Index", "Customer", new { }, new { @class = "nav-link" })
        </li>
            }
        <li class="nav-item">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "! ", "Index", "Manage", new { } , new { @class = "nav-link" })
            @*@Html.ActionLink("Hello ", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
        </li>
            <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
            <ul class="navbar-nav navbar-right navbar-dark bg-dark">
                <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", new { }, new { @class = "nav-link" })</li>
            </ul>
}


