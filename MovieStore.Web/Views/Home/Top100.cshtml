@model List<MovieStore.Lib.Models.Movie>

@{
    ViewBag.Title = "Top100";
}
<div class="container">
    <div class="jumbotron bg-secondary my-2 d-flex align-items-center justify-content-center">
        <h1 id="top-100-brand" class="text-warning display-1"><i class="fas fa-star mr-1 text-warning mr-4" style="padding: 0.2rem 0rem; margin: 0rem 1rem;"></i>Top 1OO<i class="fas fa-star mr-1 text-warning ml-4" style="padding: 0.2rem 0rem; margin: 0rem 1rem;"></i></h1>
    </div>
</div>
<div class="row align-items-stretch align-content-stretch justify-content-around">
    @if (Model.Count > 0)
    {
        foreach (var movie in Model)
        {
            @Html.Partial("_MoviePartial", movie)
        }
    }
</div>